%header.signup-header-4
  .signup-header-4__containar
    %h1.signup-header-4__containar__title
      .signup-header-4__containar__title__img
        = link_to image_tag "/images/SVG/fmarket_logo_red.svg", alt: "Mercari",class: "sign-up_img"

    %nav.signup-bar-4
      %ol.signup-bar-4__to
        %li.signup-bar-4__to-do
          会員情報
          .progress-status1-4
        %li.signup-bar-4__to-do
          電話番号認証
          .progress-status2-4
        %li.signup-bar-4__to-do
          お届け先住所入力
          .progress-status3-4
        %li.li--active-4
          支払い方法
          .progress-status4-4
        %li.signup-bar-4__to-do
          完了
          .progress-status5-4

.main__credit-container
  .credit__content
    %section.chapter__container
      %h2.chapter__head 支払い方法
      = form_tag(cards_path, method: :post, id: 'charge-form', name: "inputForm",class: "chapter__container__inner") do |f|
        .form__main__container
          .form__content
            %label{class:'payment__card', for: 'card_number'} カード番号
            %span.require__form
              必須
            = text_field_tag "number", "", class: 'number-input__deafult', type: "text", id: 'card_number', maxlength: "16", placeholder: "半角数字のみ"
            .registration-error{type: "hidden", value: "必須項目です"}
            .image-credit
              = image_tag src="http://manual.estore.co.jp/shared/mg_sozai/card_m_all.gif", size: "300x30"
          .form__content-top__margin
            %label.payment__card 有効期限
            %span.require__form
              必須
          .select__box-top__margin
            .select__box__half
              %select.select__default#exp_month{name: "exp_month", type: "text"}
                %option{value: "1"}01
                %option{value: "2"}02
                %option{value: "3"}03
                %option{value: "4"}04
                %option{value: "5"}05
                %option{value: "6"}06
                %option{value: "7"}07
                %option{value: "8"}08
                %option{value: "9"}09
                %option{value: "10"}10
                %option{value: "11"}11
                %option{value: "12"}12
              .expiration-date-icon
                %i.fas.fa-angle-down
            %span{class: "month"} 月
            .select__box__half-2
              %select.select__default#exp_year{name: "exp_year", type: "text"}
                %option{value: "2019"}19
                %option{value: "2020"}20
                %option{value: "2021"}21
                %option{value: "2022"}22
                %option{value: "2023"}23
                %option{value: "2024"}24
                %option{value: "2025"}25
                %option{value: "2026"}26
                %option{value: "2027"}27
                %option{value: "2028"}28
                %option{value: "2029"}29
              .expiration-date-icon
                %i.fas.fa-angle-down
            %span{class:"year"} 年

          .form__content-top__margin-2
            %label.security-code{for: "cvc"} セキュリティーコード
            %span.require__form
              必須
            = text_field_tag "cvc", "", class: 'cvc', type: "text", id: "cvc", maxlength: "4" ,placeholder: "カード背面４桁もしくは３桁の番号"
            .single__code
              = link_to "#",class: "single__code__text" do
                %i.fas.fa-question-circle
                %span カード裏面の番号とは？
          #card_token
          = submit_tag "次へ進む", class: "next-current_page-credit", id: "token_submit", type: 'button'

