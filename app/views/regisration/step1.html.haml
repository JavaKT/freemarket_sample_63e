= form_for @user, url: step2_regisration_index_path, method: :get, html: {class: 'first-main__box'} do |f|
  ニックネーム
  = f.text_field :nickname, placeholder: '例) メルカリ太郎'
  = f.email_field :email, placeholder: 'PC・携帯どちらでも可'
  = f.password_field :password, placeholder: '6文字以上'
  = f.password_field :password_confirmation, placeholder: '6文字以上'
  本名
  = f.text_field :name, placeholder: '例)武羅吐陽吐'
  かな
  = f.text_field :kana, placeholder: '例)ブラットピット'
  生年月日
  = f.date_field :birthday
  = f.submit "電話番号認証へ"