.user-header-login
  %h1.user-header-login-fmarket
    .user-header-login-fmarket-link
      = link_to root_path do
        = image_tag "/assets/SVG/fmarket_logo_red.svg", alt: "Mercari",class:"fmarket-1"

.container-login-6
  .signup-panel-6
    .signup-panel-6__title
      %p.not-acount
        アカウントをお持ちでない方はこちら
      .not-acount-new-create
        = link_to  signup_regisrations_path,class: "singup-new" do
          新規会員登録
          
    .signup-panel-6__content
      %button#facebook-2
        %i.fab.fa-facebook-square.facebook-icon-2
        Facebookでログイン
        
      %button#Google-2
        %i.fab.fa-google.google-icon-2
        Googleでログイン

    .form-for-group-1
      .form-for-group-1__personal
        .form-for-group-1__personal__container
          = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            = f.label :email
            %br/
            = f.email_field :email, autofocus: true, autocomplete: "email"
            = f.label :password
            %br/
            = f.password_field :password, autocomplete: "current-password"
            = f.submit "Log in"