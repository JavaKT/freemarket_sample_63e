= render 'shared/header2'

%nav.location
  %ul.location-pre
    %li
      - breadcrumb :user_show_buy
      = breadcrumbs separator: " &rsaquo; "

%main.major
  .r-content
    %section.deal
      %h2.deal-head
        出品した商品
      %ul.listing-tab
        %li
          =link_to users_path do
            %h3
              出品中
        %li.active
          =link_to show_buy_users_path do
            %h3
              購入済
      .main-box__items__box__frame
        %ul.i-list
          -@items.each do |item|
            %li.item
              .item-box
                =link_to item_path(item), class: "field" do
                  %figure.card
                    %figcaption
                      %span
                        = item.name
                    .style
                      %span.price
                        ¥
                        = item.price.to_i
                      = image_tag item.image_url,alt: "商品画像",class: "product"
            
    %ul.mypage-pager
      %li.pager-button
        =link_to users_path do
          = icon "fas", "chevron-left", class: "chevron-left"

  = render 'users/shared/sidebar'

= render "shared/item_footer"