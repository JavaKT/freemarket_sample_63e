    %section.deal
      %h2.deal-head
        出品した商品
      %ul.listing-tab
        %li.active
          =link_to "#" do
            %h3
              出品中
        %li
          =link_to "#" do
            %h3
              取引中
        %li
          =link_to "#" do
            %h3
              取引中
      .deal-body
        %ul.i-list
          -@items.each do |item|
            %li.item
              .item-box
                =link_to item_path(item), class: "field" do
                  %figure.card
                    %figcaption
                      %span
                        = item.name
                    .style
                      %span.price
                        ¥
                        = item.price.to_i
                      = image_tag item.image_url,alt: "商品画像",class: "product"
            
