= render 'shared/header2'

%nav.location
  %ul.location-pre
    %li{itemscope: true, itemtype: "#"}
      =link_to "#", itemprop: "url" do
        %span{itemprop: "title"}
          Fマーケット
    = icon "fas", "chevron-right"
    %li{itemscope: true, itemtype: "#"}
      %span{itemprop: "title"}
        マイページ
    = icon "fas", "chevron-right"
