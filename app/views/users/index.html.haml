.main-box__items
  .main-box__items__box
    .main-box__items__box__heading
      .main-box__items__box__heading__text
        = @user.nickname 
        の出品商品一覧
      .main-box__items__box__heading__more
        =link_to "#", class: "more" do
          もっと見る
    .main-box__items__box__frame
      %ul.i-list
        -@items.each do |item|
          %li.item
            .item-box
              =link_to item_path(item), class: "field" do
                %figure.card
                  %figcaption
                    %span
                      = item.name
                  .style
                    %span.price
                      ¥
                      = item.price.to_i
                    = image_tag item.image_url,alt: "商品画像",class: "product"