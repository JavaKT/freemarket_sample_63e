= render 'shared/header2'

%nav.location
  %ul.location-pre
    %li
      - breadcrumb :user_show
      = breadcrumbs separator: " &rsaquo; "
  

%main.major
  .r-content
    %section.user-detail
      =link_to "#", class: "image-content" do
        %figure
          = image_tag "/images/user.png", alt: "Unknown", class: "mypage-user", width: "60", height: "60"
        %h2.bold
          = current_user.nickname
        .eva
          .eva-left
            評価
            %span.bold
              0
          .eva-right
            出品数
            %span.bold
              0
    %section.notice-todo
      %ul.mypage-info
        %li.info-text
          =link_to "#" do
            %h3
              お知らせ
        %li.info-text
          =link_to "#" do
            %h3
              やることリスト
      .tab-text
        %ul.tab-line#id
          %li.tab-line__list
            =link_to "#", class: "mypage-mail" do
              %figure
                = image_tag "/images/SVG/logo_red.svg", alt: "Mercari", width: "25"
              .mail-text
                .mail-text__area
                  ご登録のメールアドレスに認証メールを送りました。メールに記載のURLをクリックして、メールアドレスを認証してください。
                %time
                  = icon "far", "clock", class: "icon-clock"
                  %span
                    7日前
              = icon "fas", "chevron-right", class: "chevron-right"
          %li.go-page
            =link_to "#" do
              一覧を見る
    %section.deal
      %h2.deal-head
        購入した商品
      %ul.deal-tab
        %li.active
          =link_to "#" do
            %h3
              取引中
        %li
          =link_to "#" do
            %h3
              過去の取引
      .deal-body
        %ul.deal-panel#id
          %li.deal-info
            過去に取引した商品がありません

  = render 'users/shared/sidebar'