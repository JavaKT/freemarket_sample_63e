.single_container
  %header.signup-header

    .signup-header__containar
      %h1
        %a
          = image_tag "/images/SVG/fmarket_logo_red.svg", alt: "Mercari"


      %nav.signup-bar
        %ol
          %li.li--active
            会員情報
            .progress-status1
          %li.li
            電話番号認証
            .progress-status2
          %li
            お届け先住所入力
            .progress-status3
          %li
            支払い方法
            .progress-status4
          %li
            完了
            .progress-status5

  .signle-container
    .main
      %p.signup__title 会員情報登録
      = form_for @user, url: signup_validates_regisrations_path,method: :post do |f|
        .l-single-container
          .l-single-container__nickname
            %label
              ニックネーム
            %span.require
              必須
            = f.text_field :nickname,placeholder: "例） フリマ太郎",class:"text__input"
            = render partial: 'shared/error_messages', locals: {user: @user, column: "nickname"}
          .l-single-container__form
            %label
              メールアドレス
            %span.require
              必須
            = f.text_field :email, placeholder: "PC・携帯どちらでも可",class:"text__input"
            = render partial: 'shared/error_messages', locals: {user: @user, column: "email"}
          .l-single-container__form
            %label
              パスワード
            %span.require
              必須
            = f.text_field :password,placeholder: "7文字以上",class:"text__input"
            = render partial: 'shared/error_messages', locals: {user: @user, column: "password"}

          .l-single-container__form
            %label
              お名前（全角）
            %span.require
              必須
          = f.text_field :last_name,placeholder: "例）山田" ,class:"text__input"
          = render partial: 'shared/error_messages', locals: {user: @user, column: "last_name"}
          = f.text_field :first_name,placeholder: "例）彩",class:"text__input"
          = render partial: 'shared/error_messages', locals: {user: @user, column: "first_name"}
          .l-single-container__form
            %label.name
              お名前カナ（全角）
            %span.require
              必須
          = f.text_field :last_kana,placeholder: "例）ヤマダ",class:"text__input"
          = render partial: 'shared/error_messages', locals: {user: @user, column: "last_kana"}
          = f.text_field :first_kana,placeholder: "例）アヤ",class:"text__input"
          = render partial: 'shared/error_messages', locals: {user: @user, column: "first_kana"}

          .l-single-container__birthday
            %label.name
              生年月日
            %span.require
              必須
            🔻
            .l-single-container__birthday__select
              = f.collection_select :year_id, Year.all, :id,:name, prompt: "---",class:"select"
            年
            = render partial: 'shared/error_messages', locals: {user: @user, column: "year_id"}
            .l-single-container__birthday__select
              = f.collection_select :month_id, Month.all, :id,:name, prompt: "---",class:"select"
            月
            = render partial: 'shared/error_messages', locals: {user: @user, column: "month_id"}
            .l-single-container__birthday__select
              = f.collection_select :date_id, Day.all, :id, :name, prompt: "---",class:"select"
            🔻
            日
            = render partial: 'shared/error_messages', locals: {user: @user, column: "date_id"}
            = f.submit"次へ進む",class:"next-current_page"


  %footer.user-footer
    %nav
      %ul
        %li
          %a プライバシーポリシー 
        %li
          %a Fmarket利用規約
        %li
          %a 特定商品に関する表記 
    %a
      = link_to root_path do
        = image_tag "/assets/SVG/logo_gray.svg", alt: "Mercari", width: "80", height: "60"  
      %p 
        %small ©︎2019 Fmarket
