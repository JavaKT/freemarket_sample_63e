.single_container 
  %header.signup-header
    .signup-header__containar
      %h1.signup-header__containar__title
        .signup-header__containar__title__img
          = link_to image_tag "/assets/SVG/fmarket_logo_red.svg", alt: "Mercari",class: "sign-up_img"


      %nav.signup-bar-3
        %ol.signup-bar-3__to
          %li.signup-bar-3__to-do
            会員情報
            .progress-status1-3
          %li.signup-bar-3__to-do
            電話番号認証
            .progress-status2-3
          %li.li--active-3
            お届け先住所入力
            .progress-status3-3
          %li.signup-bar-3__to-do
            支払い方法
            .progress-status4-3
          %li.signup-bar-3__to-do
            完了
            .progress-status5-3

  .single-container
    .main
      %p.signup__title 発送元・お届け先入力
      = form_for @address,url: address_create_regisrations_path, method: :post do |f|
        .l-single-container
          .l-single-container__address
            %label
              郵便番号
            %span.require
              必須
            = f.text_field :post_no,placeholder: "例）123ー4567",class:"text__input"
            = render partial: 'shared/error_messages', locals: {user: @address, column: "post_no"}
          .l-single-container__address
            .l-single-container__address__select
              %label
                都道府県
              %span.require
                必須
              = f.collection_select :prefecture_id, Prefecture.all, :id, :name,{prompt: "---"},{class:"select__default-2"}
              .expiration-date-icon-1
                %i.fas.fa-angle-down
              = render partial: 'shared/error_messages', locals: {user: @address, column: "prefecture_id"}
          .l-single-container__form
            %label
              市町村区
            %span.require
              必須
            = f.text_field :city,placeholder: "例）横浜市緑区",class:"text__input"
            = render partial: 'shared/error_messages', locals: {user: @address, column: "city"}
          .l-single-container__form
            %label
              番地
            %span.require
              必須
            = f.text_field :town,placeholder:" 例）青山1-1-1",class:"text__input"
            = render partial: 'shared/error_messages', locals: {user: @address, column: "town"}
          .l-single-container__form
            %label
              建物名
            %span.any-5
              任意
            = f.text_field :building,placeholder: "例）柳ビル103",class:"text__input"
          .l-single-container__form
            %label
              電話
            %span.any-5
              任意
            = f.text_field :tell,placeholder:"例）09012345678",class:"text__input"
            = f.submit"次へ進む",class:"next-current_page"
        

  %footer.user-footer
    %nav
      %ul.user-footer-container
        %li.user-footer-menu
          .user-footer-menu__1 プライバシーポリシー 
        %li.user-footer-menu
          .user-footer-menu__1 Fmarket利用規約
        %li.user-footer-menu
          .user-footer-menu__1 特定商品に関する表記 
    .user-footer__link
      = link_to root_path do
        = image_tag "/assets/SVG/logo_gray.svg", alt: "Mercari", class:".user-footer-img", width: "80", height: "60"  
    %h1.user-footer__end
      %small.user-footer__year ©︎2019 Fmarket
